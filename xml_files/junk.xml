<aardvark>

<!--Configuration (Need pullups, not sure why...)-->
	<configure gpio="0" i2c="1" pullups="1" spi="1" />
	<i2c_bitrate khz="100" />
	<i2c_free_bus />
	<sleep ms="200" />

<!--<WRITE 0x2C, 44 55>-->
	<i2c_write addr="0x2C" count="3" radix="16">44 55 0a</i2c_write>
	<sleep ms="200" />

<!--<READ 0x2C, 4>-->
	<i2c_read addr="0x2C" count="4" radix="16" />
	<sleep ms="200" />

</aardvark>
